    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">#0db74c</item> <!-- Set the desired colorAccent -->
        <item name="android:windowBackground">@android:color/white</item>
